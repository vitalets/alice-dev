{
  "name": "alice-dev",
  "version": "1.0.0",
  "description": "Alice devtools website and server",
  "scripts": {
    "lint": "eslint src test",
    "dev:back": "PORT=4000 nodemon -w src/backend src/backend",
    "dev:front": "WS_URL=ws://localhost:4000 webpack-dev-server --open",
    "dev:skill": "PORT=3000 node test/helpers/skill-server",
    "dev": "run-p dev:*",
    "build": "webpack",
    "build:prod": "NODE_ENV=production npm run build",
    "analyze": "WEBPACK_ANALYZE=1 npm run build:prod",
    "test": "mocha test/setup.js test/specs/*.js --timeout=5000",
    "test:d": "DEBUG_MODE=1 npm run test -- --bail",
    "test:dd": "PUPPETEER_HEADLESS=false npm run test:d -- --timeout=60000",
    "docs:update": "npm run build:prod && npm test && cp -R dist/ docs/",
    "docs:commit": "git add docs && git commit -m'update docs' --no-verify --allow-empty",
    "release:frontend": "npm run docs:update && npm run docs:commit && git push --no-verify",
    "release:backend": "./scripts/release-backend.sh",
    "release:all": "npm run release:frontend && npm run release:backend"
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.6.0",
    "@material-ui/icons": "^4.5.1",
    "@sentry/browser": "^5.7.1",
    "@sentry/node": "^5.7.1",
    "alice-renderer": "^0.4.0",
    "chnl": "^0.5.0",
    "clsx": "^1.0.4",
    "immer": "^5.0.0",
    "jsoneditor": "^7.2.1",
    "lodash.throttle": "^4.1.1",
    "loggee": "^0.2.0",
    "micro": "^9.3.4",
    "promised-map": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "throw-utils": "^0.1.3",
    "websocket": "^1.0.30",
    "websocket-as-promised": "^0.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-react": "^7.7.0",
    "alice-tester": "^0.8.0",
    "await-timeout": "^0.6.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-mocha": "^6.2.1",
    "get-port": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^2.0.0",
    "serve-handler": "^6.1.2",
    "style-loader": "^1.0.0",
    "svg-url-loader": "^3.0.2",
    "terser-webpack-plugin": "^2.2.1",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "license": "MIT"
}
